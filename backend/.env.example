# Server Configuration
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=coursecraft_user
DATABASE_PASSWORD=coursecraft_pass
DATABASE_NAME=coursecraft_db
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_EXPIRATION=7d

# LLM Configuration
# Supported providers: openai, gemini
LLM_PROVIDER=openai

# OpenAI Configuration (if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Google Gemini Configuration (if LLM_PROVIDER=gemini)
# GEMINI_API_KEY=your-gemini-api-key
# GEMINI_MODEL=gemini-1.5-flash

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Socket.IO
SOCKET_IO_CORS_ORIGIN=http://localhost:5173,http://localhost:3000
